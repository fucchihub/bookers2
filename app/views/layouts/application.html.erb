<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <script src="https://kit.fontawesome.com/1c45b22aa5.js" crossorigin="anonymous"></script>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
          <div class="navbar-brand">
            <%= link_to "Bookers", root_path, class: 'text-white text-decoration-none' %>
          </div>
           <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown"
                        aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
              <% if user_signed_in? %>
              <li class="nav-item mx-2">
                <%= link_to user_path(current_user.id), class: 'text-white text-decoration-none' do %>
                  <i class="fa-solid fa-house"></i> Home
                <% end %>
              </li>
              <li class="nav-item mx-2">
                <%= link_to users_path, class: 'text-white text-decoration-none' do %>
                  <i class="fa-solid fa-users"></i> Users
                <% end %>
              </li>
              <li class="nav-item mx-2">
                <%= link_to books_path, class: 'text-white text-decoration-none' do %>
                  <i class="fa-solid fa-book-open"></i> Books
                <% end %>
              </li>
              <li class="nav-item mx-2">
                <%= link_to destroy_user_session_path, method: :delete, class: 'text-white text-decoration-none' do %>
                  <i class="fa-solid fa-right-from-bracket"></i> Log out
                <% end %>
              </li>
              <% else %>
              <!--<li class="nav-item">-->
              <%#= link_to "Bookers", root_path %>
              <!--</li>-->
              <li class="nav-item mx-2">
                <%= link_to root_path, class: 'text-white text-decoration-none' do %>
                  <i class="fa-solid fa-house"></i> Home
                <% end %>
              </li>
              <li class="nav-item mx-2">
                <%= link_to about_path, class: 'text-white text-decoration-none' do %>
                  <i class="fa-solid fa-link"></i> About
                <% end %>
              </li>
              <li class="nav-item mx-2">
                <%= link_to new_user_registration_path, class: 'text-white text-decoration-none' do %>
                  <i class="fa-solid fa-user-plus"></i></i> Sign up
                <% end %>
              </li>
              <li class="nav-item mx-2">
                <%= link_to new_user_session_path, class: 'text-white text-decoration-none' do %>
                  <i class="fa-solid fa-right-to-bracket"></i> Log in
                <% end %>
              </li>
              <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>

    <p><%= flash[:notice] %></p>
    <%= yield %>

    <div class="container mt-3">
      <div class="row">
        <div class="mx-auto">
          <footer>
            <p>CopyRight Infratop.inc</p>
          </footer>
        </div>
      </div>
    </div>

  </body>
</html>


