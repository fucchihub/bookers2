<div class="container">
  <div class="row">
    <div class="col-md-3">

      <h2>New book</h2>

      <% if @book.errors.any? %>
        <p><%= pluralize(@book.errors.count, "error") %> prohibited your book from being saved:</p>
        <ul>
          <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>

      <%= form_with model: @book, url: books_path, method: :post do |f| %>
        <h5>Title</h5>
        <%= f.text_field :title %>

        <h5>Body</h5>
        <%= f.text_area :body %>

        <p><%= f.submit 'Create Book' %></p>
      <% end %>

    </div>
  </div>
</div>

