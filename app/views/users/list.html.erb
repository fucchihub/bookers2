<div class="container">
  <div class="row">
    <div class="col-md-3">

      <h2>User Info</h2>

      <table class="table">
        <tbody>
          <tr><%= image_tag user.get_profile_image(100,100) %></tr>
          <tr>
            <th>name</th>
            <th><%= user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= user.introduction %></th>
          </tr>
        </tbody>
      </table>

          <div class="row">
            <% if user == current_user %>
              <p>
                <%= link_to edit_user_path(user) do %>
                  <i class="fa-solid fa-user-gear"></i>
                <% end %>
              </p>
            <% else %>
              <p>
                <%= link_to user_path(user) do %>
                  <i class="fa-solid fa-user-gear"></i>
                <% end %>
              </p>
            <% end %>
          </div>

    </div>
  </div>
</div>